generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShowcaseVideo {
  id          Int      @id @default(autoincrement())
  team        String
  title       String
  season      String
  date        DateTime
  videoSrc    String // This field stores the URL/path of the video file
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
